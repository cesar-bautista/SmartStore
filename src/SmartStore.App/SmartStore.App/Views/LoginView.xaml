<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SmartStore.App.Views.LoginView"
             BackgroundColor="{StaticResource BackgroundColor}"
             Title="Login">

    <ContentPage.Content>
        <Grid RowSpacing="0"
              ColumnSpacing="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <BoxView Grid.Row="0"
                     BackgroundColor="{StaticResource BlackColor}"
                     Opacity="0.3"/>

            <Image  Grid.Row="0"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="150">
                <Image.Source>
                    <OnPlatform x:TypeArguments="ImageSource">
                        <On Platform="Android, iOS" Value="netcar_logo"/>
                        <On Platform="UWP, WinRT, WinPhone" Value="Assets/netcar-logo.png"/>
                    </OnPlatform>
                </Image.Source>
            </Image>

            <Label Grid.Row="1"
                   Text="LOGIN"
                   FontSize="Large"
                   TextColor="{StaticResource WhiteColor}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <StackLayout Grid.Row="2"
                         VerticalOptions="Fill"
                         HorizontalOptions="Center"
                         Spacing="15">

                <StackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="Email:"
                           TextColor="{StaticResource WhiteColor}"/>
                    <Entry Text="{ Binding Email }"
                           Keyboard="Email"
                           WidthRequest="300" />
                </StackLayout>

                <StackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="Password:"
                           TextColor="{StaticResource WhiteColor}"/>
                    <Entry Text="{ Binding Password }"
                           WidthRequest="300"
                           IsPassword="True" />
                </StackLayout>

                <StackLayout HorizontalOptions="Center" Spacing="5">
                    <Button Text="LOGIN"
                            BackgroundColor="{StaticResource BlackColor}"
                            TextColor="{StaticResource WhiteColor}"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Margin="15,10"
                            Command="{ Binding LoginCommand }" />
                </StackLayout>

            </StackLayout>

            <StackLayout Grid.Row="3"
                         VerticalOptions="CenterAndExpand"
                         Margin="10,0,0,15"
                         Spacing="15">
                <Label Text="Forgotten Password?"
                       HorizontalOptions="CenterAndExpand"
                       TextColor="{StaticResource WhiteColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{ Binding ForgotPasswordCommand }" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Need an Account?"
                       HorizontalOptions="CenterAndExpand"
                       TextColor="{StaticResource WhiteColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{ Binding NewAccountCommand }" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

            <!-- MODAL BACKGROUND LAYER -->
            <BoxView Grid.Row="0"
                     Grid.RowSpan="4"
                     BackgroundColor="{StaticResource BlackColor}"
                     Opacity="0.8"
                     IsVisible="{ Binding IsBusy }" />

            <ActivityIndicator Grid.Row="0"
                               Grid.RowSpan="4"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               Color="{StaticResource AccentColor}"
                               IsRunning="{ Binding IsBusy }"
                               IsVisible="{ Binding IsBusy }" >
                <ActivityIndicator.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="iOS, Android" Value="100" />
                        <On Platform="UWP, WinRT, WinPhone" Value="400" />
                    </OnPlatform>
                </ActivityIndicator.WidthRequest>
            </ActivityIndicator>

            <!-- CANCEL BUTTON (appears after X seconds after login) -->
            <StackLayout Grid.Row="0"
                         Grid.RowSpan="4"
                         VerticalOptions="Center"
                         TranslationY="60"
                         Margin="30,0"
                         IsVisible="{ Binding IsShowCancel }">
                <Label Text="This is taking a little longer than expected, please hang in there..."
                       TextColor="{StaticResource WhiteColor}"
                       LineBreakMode="WordWrap"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
                <Button Text="Cancel"
                        BackgroundColor="{StaticResource BlackColor}"
                        TextColor="{StaticResource WhiteColor}"
                        Command="{ Binding CancelLoginCommand }"
                        HorizontalOptions="Center" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>